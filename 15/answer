回答1-1-1
SELECT CustomerID, COUNT(CustomerID)
FROM Orders
WHERE (OrderDate BETWEEN '1996-01-01' AND '1996-12-31')
GROUP BY CustomerID
HAVING COUNT(CustomerID) >= 3
ORDER BY COUNT(CustomerID) DESC

回答1-1-2

回答1-2
SELECT OrderID, MAX(OrderDetailCount) 
FROM (
	SELECT OrderID, COUNT(OrderId) AS OrderDetailCount
  FROM OrderDetails
	GROUP BY OrderID
)

回答1-3
SELECT Shippers.ShipperID, COUNT(Orders.OrderID) AS ShippingCount
FROM Shippers
LEFT JOIN Orders ON Shippers.ShipperID=Orders.ShipperID
GROUP BY Orders.ShipperID
ORDER BY ShippingCount DESC

回答1-4
SELECT SUM(Products.Price * OrderDetails.Quantity) AS Sales, Country
FROM Customers
LEFT JOIN Orders ON Customers.CustomerID=Orders.CustomerID
LEFT JOIN OrderDetails ON Orders.OrderID=OrderDetails.OrderID
JOIN Products ON OrderDetails.ProductID=Products.ProductID
GROUP BY Country
ORDER BY Sales DESC

回答1-5
SELECT SUM(Products.Price * OrderDetails.Quantity) AS Sales, STRFTIME('%Y', Orders.OrderDate) AS OrderYear, Country
FROM Customers
LEFT JOIN Orders ON Customers.CustomerID=Orders.CustomerID
LEFT JOIN OrderDetails ON Orders.OrderID=OrderDetails.OrderID
JOIN Products ON OrderDetails.ProductID=Products.ProductID
GROUP BY Country, OrderYear

回答1-6-1
ALTER TABLE Employees
ADD Junior boolean
DEFAULT false

回答1-6-2
UPDATE Employees
SET Junior=true
WHERE STRFTIME('%Y', BirthDate) > 1960

回答1-7-1
ALTER TABLE Shippers
ADD LongRelation boolean
DEFAULT false

回答1-7-2
UPDATE Shippers
SET LongRelation=true
WHERE ShipperID IN (
  SELECT ShipperID
  JOIN Orders ON Shippers.ShipperID=Orders.ShipperID
  GROUP BY ShipperID
  HAVING COUNT(Orders.OrderID) >= 70
)

回答1-8
SELECT Employees.EmployeeID, LatestOrderDate
FROM Employees
JOIN (
  SELECT EmployeeID, MAX(OrderDate) AS LatestOrderDate
  FROM Orders
  GROUP BY EmployeeID
) AS Orders ON Employees.EmployeeID=Orders.EmployeeID

回答1-9-1
UPDATE Customers
SET CustomerName=NULL
WHERE CustomerID=1

回答1-9-2
SELECT *
FROM Customers
WHERE CustomerName IS NOT NULL

回答1-9-3
SELECT *
FROM Customers
WHERE CustomerName IS NULL

